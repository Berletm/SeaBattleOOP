# Change to directory where compile_commands.json is
compilation_database_dir: .
# Change to directory where diagram should be written
output_directory: diagrams
diagrams:
  full-diagram:
    type: class
    glob:
      - src/*.cpp
      - headers/*.hpp
  abilties-diagram:
    type: class
    glob:
      - src/AbilityManager.cpp
      - src/DoubleDamage.cpp
      - src/RocketBarrage.cpp
      - src/Scanner.cpp
      - src/AbilityInterface.cpp
      - headers/AbilityManager.hpp
      - headers/AbilityInterface.hpp
      - headers/DoubleDamage.hpp
      - headers/RocketBarrage.hpp
      - headers/Scanner.hpp
    include:
      context:
        - AbilityInterface
        - AbilityManager
    exclude:
      relationships:
        - dependency
